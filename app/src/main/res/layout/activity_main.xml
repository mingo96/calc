<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"

    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:background="@color/material_dynamic_secondary80"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="15dp"
            android:background="@android:drawable/btn_default_small"
            android:id="@+id/screen_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:text="@string/screen_text"
            android:layout_marginVertical="50dp"
            android:textSize="50sp"></TextView>

        <RadioGroup
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/Line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:backgroundTint="@color/dark_blue"
                    android:layout_margin="3sp"></Button>
                <Button
                    android:id="@+id/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:backgroundTint="@color/dark_blue"
                    android:layout_margin="3sp"></Button>
                <Button
                    android:id="@+id/times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:backgroundTint="@color/dark_blue"
                    android:layout_margin="3sp"></Button>
                <Button
                    android:id="@+id/divide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:backgroundTint="@color/dark_blue"
                    android:layout_margin="3sp"></Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/calculate"
                    android:layout_width="wrap_content"
                    android:layout_height="200sp"
                    android:text="="
                    android:backgroundTint="@color/dark_blue"></Button>

                <LinearLayout
                    android:id="@+id/line2.1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:id="@+id/line2.1.1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <Button
                            android:id="@+id/button7"
                            android:layout_width="wrap_content"
                            android:layout_height="95dp"
                            android:text="7"
                    android:layout_margin="2sp"></Button>
                        <Button
                            android:id="@+id/button8"
                            android:layout_width="wrap_content"
                            android:layout_height="95sp"
                            android:text="8"
                    android:layout_margin="2sp"></Button>
                        <Button
                            android:id="@+id/button9"
                            android:layout_width="wrap_content"
                            android:layout_height="95sp"
                            android:text="9"
                    android:layout_margin="2sp"></Button>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/line2.1.2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <Button
                            android:id="@+id/button4"
                            android:layout_width="wrap_content"
                            android:layout_height="95sp"
                            android:text="4"
                    android:layout_margin="2sp"></Button>
                        <Button
                            android:id="@+id/button5"
                            android:layout_width="wrap_content"
                            android:layout_height="95sp"
                            android:text="5"
                    android:layout_margin="2sp"></Button>
                        <Button
                            android:id="@+id/button6"
                            android:layout_width="wrap_content"
                            android:layout_height="95sp"
                            android:text="6"
                    android:layout_margin="2sp"></Button>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="200sp"
                    android:text="CE"
                    android:backgroundTint="@color/dark_blue"></Button>

                <LinearLayout
                    android:id="@+id/line3.1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:id="@+id/line3.1.1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <Button
                            android:id="@+id/button1"
                            android:layout_width="wrap_content"
                            android:layout_height="95sp"
                            android:text="1"
                    android:layout_margin="2sp"></Button>
                        <Button
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="95sp"
                            android:text="2"
                    android:layout_margin="2sp"></Button>
                        <Button
                            android:id="@+id/button3"
                            android:layout_width="wrap_content"
                            android:layout_height="95sp"
                            android:text="3"
                    android:layout_margin="2sp"></Button>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/line3.1.2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="2sp">

                        <Button
                            android:id="@+id/button0"
                            android:layout_width="wrap_content"
                            android:layout_height="95sp"
                            android:text="0"
                    android:layout_margin="2sp"></Button>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </RadioGroup>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>